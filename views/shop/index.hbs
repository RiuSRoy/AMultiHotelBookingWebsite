{{# each hotelrow}}   
  <div class="row" id="front_page">
    {{# each this}}
      <div class="col-12 col-lg-6">
        <div class="pos card-panel hoverable">
          <img src={{this.imagePath}} class="responsive-img circle  hoverable">
          <div class="caption">
            <h3 class="hotel_name">{{this.title}}</h3>
            <p class="description">{{this.description}}</p>
            <hr></hr>
            <div class="clearfix"> 
                <div class="price pull-left">{{this.price}}</div>
                <a href='/hotels/{{this._id}}'  class="btn pink pull-right deal" role="button">View Deal &raquo;</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}

  <ul class="pagination">
    <li class="disabled waves-effect">
      <a href="#!">
        <i class="material-icons">chevron_left</i>
      </a>
    </li>
    {{# each pages}}
      <li class="page-item waves-effect"><a class="page-link"  href="/hotels/page/{{this}}">{{this}}</a></li>
    {{/each}}
    <li class="waves-effect">
      <a href="#!">
        <i class="material-icons">chevron_right</i>
      </a>
    </li>
  </ul>

